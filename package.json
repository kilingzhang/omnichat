{
  "name": "omnichat",
  "version": "0.1.0",
  "private": true,
  "description": "Omnichat - Unified messaging SDK for all platforms",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "pnpm -r --filter './packages/*' run build",
    "dev": "pnpm -r --filter './packages/*' --parallel run dev",
    "test": "pnpm -r --filter './packages/*' run test",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"**/*.{ts,json,md}\""
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "prettier": "^3.1.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "packageManager": "pnpm@8.15.0",
  "pnpm": {
    "overrides": {
      "form-data": "^2.5.4",
      "qs": "^6.14.1",
      "tough-cookie": "^4.1.4",
      "undici": "^6.23.0",
      "esbuild": "^0.25.0"
    }
  }
}
