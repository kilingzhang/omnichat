{
  "name": "@omnichat/telegram",
  "version": "0.1.0",
  "description": "Telegram adapter for Omnichat",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest",
    "test:unit": "vitest run --reporter=verbose src/adapter.test.ts",
    "test:integration": "vitest run --reporter=verbose integration/chat-management.integration.test.ts",
    "test:integration:smart": "vitest run --reporter=verbose integration/smart-type-inference.integration.test.ts",
    "test:all": "vitest run --reporter=verbose",
    "test:coverage": "vitest run --coverage"
  },
  "keywords": [
    "telegram",
    "bot",
    "adapter",
    "omnichat"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@omnichat/core": "workspace:*"
  },
  "peerDependencies": {
    "node-telegram-bot-api": "^0.67.0"
  },
  "peerDependenciesMeta": {
    "node-telegram-bot-api": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/node-telegram-bot-api": "^0.64.5",
    "@vitest/coverage-v8": "^4.0.18",
    "typescript": "^5.3.3",
    "vitest": "^4.0.18"
  }
}
