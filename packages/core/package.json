  },
  "keywords": [
    "omnichat",
    "omnichannel",
    "sdk",
    "bot",
    "chatbot",
    "messaging",
    "telegram",
    "discord",
    "slack",
    "whatsapp",
    "multi-platform"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@vitest/coverage-v8": "^4.0.0",
    "typescript": "^5.3.3",
    "vitest": "^4.0.0"
  }
}
