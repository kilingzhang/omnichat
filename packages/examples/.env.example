# Omnichat Bot Configuration
#
# Format: BOTS is a JSON array of bot configurations
# Each bot must have: id, platform, name, and platform-specific config
#
# Example single bot:
# BOTS=[{"id":"telegram","platform":"telegram","name":"mybot","telegram":{"apiToken":"YOUR_TOKEN"}}]
#
# Example multiple bots:
# BOTS=[{"id":"bot1","platform":"telegram","name":"bot1","telegram":{"apiToken":"TOKEN1"}},{"id":"bot2","platform":"discord","name":"bot2","discord":{"botToken":"TOKEN2","clientId":"CLIENT_ID"}}]

# Telegram Bot Configuration
# Get token from @BotFather on Telegram
BOTS=[{"id":"telegram","platform":"telegram","name":"mybot","telegram":{"apiToken":"YOUR_TELEGRAM_BOT_TOKEN","polling":true}}]

# Available platforms:
# - telegram: requires telegram.apiToken
# - discord: requires discord.botToken, discord.clientId (optional: discord.intents)
# - slack: requires slack.botToken
# - whatsapp: requires whatsapp.sessionId
# - signal: requires signal.phoneNumber
# - imessage: requires imessage.service
